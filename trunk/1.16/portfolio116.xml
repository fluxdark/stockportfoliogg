  function fnNumToColor(number,zeroColor){
    var sColor=zeroColor;
    if(!isNaN(parseFloat(number))){
      if(parseFloat(number)>0){sColor="#008200";}
      if(parseFloat(number)<0){sColor="#FF2200";}
    }
    return sColor;
  }
