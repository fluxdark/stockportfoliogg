  function fnSymbolSearch(symbol){
    if(trim(symbol)!=''){
      _gel("StockAddList").innerHTML='Loading ...';
      _IG_FetchContent('http://finance.yahoo.com/lookup/all?m=ALL&r=3&t='+sType+'&s='+symbol,fnSymbolSearchResponse,{refreshInterval:(60*5)});
